{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"noEmit": false,
		"noImplicitAny": false,
		"allowSyntheticDefaultImports": true,
		"outDir": "./build",
		"rootDir": "./src",
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"build"
	],
}