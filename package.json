{
  "name": "videosync-nodejs",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "dev": "nodemon --watch src --exec npx ts-node src/index.ts",
    "test": "vitest run",
    "build": "tsc -p .",
    "start": "NODE_PATH=./build node build/index.js",
    "start:dev": "nodemon src/index.ts --exec ts-node",
    "prod": "pm2 start build/index.js",
    "docker:build": "docker build . -t videosync",
    "docker:run": "docker run -d --restart=on-failure -p 8080:8080 videosync",
    "docker:dev": "docker build . -t videosync && docker run -d --restart=on-failure -p 8080:8080 videosync",
    "format": "prettier --write .",
    "lint": "eslint .",
    "type-check": "tsc --noEmit --skipLibCheck"
  },
  "author": "Ian Santos",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.17.14",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^8.57.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.6.0",
    "globals": "^15.14.0",
    "lint-staged": "^15.4.1",
    "nodemon": "^3.0.2",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "tsc-files": "^1.1.4",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "vitest": "^3.0.2"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.616.0",
    "axios": "^1.7.7",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "eventsource-parser": "^3.0.0",
    "express": "^4.18.2",
    "mysql2": "^3.6.5",
    "pino": "^9.2.0",
    "pino-pretty": "^11.2.1",
    "qrcode": "^1.5.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^10.0.0",
    "uuidv4": "^6.2.13"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "lint-staged": {
    "**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write",
      "npm run type-check"
    ]
  }
}
